<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_category_image"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:alpha="0.8"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_category_bg_color"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.7"
                android:background="@color/grey_700"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_category_image"
                app:layout_constraintEnd_toEndOf="@+id/imageView_category_image"
                app:layout_constraintStart_toStartOf="@+id/imageView_category_image"
                app:layout_constraintTop_toTopOf="@+id/imageView_category_image" />

            <TextView
                android:id="@+id/textView_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:shadowColor="@color/white"
                android:text="@string/menu_item_home_category"
                android:textColor="@color/primary_700"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/textView_category_bg_color"
                app:layout_constraintTop_toTopOf="@+id/imageView_category_image" />

            <TextView
                android:id="@+id/textView_desc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_category_image"
                app:layout_constraintEnd_toEndOf="@+id/imageView_category_image"
                app:layout_constraintStart_toStartOf="@+id/textView_category_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_category_name" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>