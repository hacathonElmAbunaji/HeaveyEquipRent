<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_equipment_image"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:alpha="0.8"
                android:scaleType="centerCrop"
                android:src="@drawable/equip_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_equipment_bg_color"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.7"
                android:background="@color/grey_700"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_equipment_image"
                app:layout_constraintEnd_toEndOf="@+id/imageView_equipment_image"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imageView_equipment_image"
                app:layout_constraintTop_toTopOf="@+id/imageView_equipment_image"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView_equipment_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:shadowColor="@color/white"
                android:text="@string/cell_equipment_category_title"
                android:textColor="@color/primary_700"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/textView_equipment_bg_color"
                app:layout_constraintTop_toTopOf="@+id/imageView_equipment_image" />

            <TextView
                android:id="@+id/textView_equip_desc"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/textView_equip_title"
                app:layout_constraintStart_toStartOf="@+id/textView_equipment_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_equip_title" />


            <ImageButton
                android:id="@+id/img_btn_supplier"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/secondary_700"
                android:paddingTop="20dp"
                android:src="@drawable/ic_supplier_info"
                android:text="@string/cell_equipment_supplier_data"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_equipment_image"
                app:layout_constraintEnd_toEndOf="@+id/imageView_equipment_image" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cell_equipment_supplier_data"
                android:textColor="@color/primary_700"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/img_btn_supplier"
                app:layout_constraintStart_toStartOf="@+id/img_btn_supplier"
                app:layout_constraintTop_toTopOf="@+id/img_btn_supplier" />

            <TextView
                android:id="@+id/textView_supplier_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cell_equipment_supplier_name"
                android:textColor="@color/primary_700"
                app:layout_constraintBottom_toBottomOf="@+id/textView_equipment_name"
                app:layout_constraintEnd_toEndOf="@+id/imageView_equipment_image"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/textView_equipment_name" />

            <TextView
                android:id="@+id/textView_supplier_name_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/textView_supplier_name"
                app:layout_constraintStart_toStartOf="@+id/textView_supplier_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_supplier_name" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/cell_equipment_price"
                android:textColor="@color/primary_700"
                app:layout_constraintBottom_toBottomOf="@+id/imageView_equipment_image"
                app:layout_constraintStart_toStartOf="@+id/imageView_equipment_image" />

            <TextView
                android:id="@+id/textView_price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/cell_equipment_height"
                android:textColor="@color/primary_700"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="@+id/textView_equip_desc" />

            <TextView
                android:id="@+id/textView_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="-----"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/cell_equipment_weight"
                android:textColor="@color/primary_700"
                app:layout_constraintBottom_toBottomOf="@+id/textView_height"
                app:layout_constraintStart_toEndOf="@+id/textView_height"
                app:layout_constraintTop_toTopOf="@+id/textView_height" />

            <TextView
                android:id="@+id/textView_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="-----"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/cell_equipment_quantity"
                android:textColor="@color/primary_700"
                app:layout_constraintBottom_toBottomOf="@+id/textView_weight"
                app:layout_constraintStart_toEndOf="@+id/textView_weight"
                app:layout_constraintTop_toTopOf="@+id/textView_weight" />

            <TextView
                android:id="@+id/textView_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toTopOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView_equip_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/textView_equipment_name"
                app:layout_constraintStart_toStartOf="@+id/textView_equipment_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_equipment_name" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/cell_equipment_supplier_rate"
                android:textColor="@color/primary_700"
                app:layout_constraintStart_toStartOf="@+id/textView_supplier_name_value"
                app:layout_constraintTop_toBottomOf="@+id/textView_supplier_name_value" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/textView6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>