<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">


            <ImageView
                android:id="@+id/imageView_order_image"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/order_img_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_order_number_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cell_orders_order_id"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toStartOf="@+id/imageView_order_image"
                app:layout_constraintTop_toBottomOf="@+id/imageView_order_image" />

            <TextView
                android:id="@+id/textView_order_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="-----"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView_order_image"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/imageView_order_image" />

            <TextView
                android:id="@+id/textView_order_date_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cell_orders_order_date"
                app:layout_constraintEnd_toStartOf="@+id/textView_order_date"
                app:layout_constraintStart_toStartOf="@+id/textView_order_number_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_number_title" />

            <TextView
                android:id="@+id/textView_order_date"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:text="-----"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView_order_number"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_number" />


            <TextView
                android:id="@+id/textView_order_status_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cell_orders_order_status"
                app:layout_constraintEnd_toStartOf="@+id/textView_order_status"
                app:layout_constraintStart_toStartOf="@+id/textView_order_date_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_date" />

            <TextView
                android:id="@+id/textView_order_status"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:text="-----"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView_order_date"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_date" />


            <TextView
                android:id="@+id/textView_order_price_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/cell_orders_order_price"
                app:layout_constraintEnd_toEndOf="@+id/textView_order_status_title"
                app:layout_constraintStart_toStartOf="@+id/textView_order_status_title"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_status_title" />

            <TextView
                android:id="@+id/textView_order_price"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:text="-----"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView_order_status"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_status" />


            <TextView
                android:id="@+id/textView_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:lines="3"
                android:maxLines="5"
                android:text="--------------------------------------------------------------------------------------------------------------"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView_order_status"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_price_title" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/cell_orders_order_details"
                app:layout_constraintEnd_toStartOf="@+id/textView_details"
                app:layout_constraintStart_toStartOf="@+id/textView_order_price_title"
                app:layout_constraintTop_toTopOf="@+id/textView_details" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>